<Window x:Class="RhinoPlugInExcercise1.OffsetDistanceWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RhinoPlugInExcercise1"
             mc:Ignorable="d" 
        Width="300"
        Height="300"
        WindowStartupLocation="CenterScreen"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel>
            <TextBox Text="{Binding Input1, Mode=OneWayToSource, UpdateSourceTrigger=PropertyChanged}"></TextBox>
            <TextBox Text="{Binding Input2, Mode=OneWayToSource, UpdateSourceTrigger=PropertyChanged}"></TextBox>
            <Button Content="OK" Click="Button_Click" Width="100"></Button>
        </StackPanel>
    </Grid>
</Window>
